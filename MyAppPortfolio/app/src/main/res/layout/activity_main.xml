<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deepakgarg.myappportfolio.MainActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:layout_gravity="center"
        android:background="#F08C35"
        android:width="250dp"
        android:layout_marginTop="20sp"
        android:padding="20dp"
        android:paddingTop="40dp"
        android:id="@+id/spotify_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:layout_marginTop="10sp"
        android:paddingTop="40dp"
        android:background="#F08C35"
        android:width="250dp"
        android:text="Scores App"
        android:id="@+id/scores_button" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:padding="20dp"
        android:layout_marginTop="10sp"
        android:paddingTop="40dp"
        android:background="#F08C35"
        android:width="250dp"
        android:layout_gravity="center"
        android:id="@+id/library_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build it Bigger"
        android:padding="20dp"
        android:layout_marginTop="10sp"
        android:paddingTop="40dp"
        android:background="#F08C35"
        android:width="250dp"
        android:layout_gravity="center"
        android:id="@+id/buildbigger_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZReader"
        android:background="#F08C35"
        android:width="250dp"
        android:padding="20dp"
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        android:paddingTop="40dp"
        android:id="@+id/reader_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone My Own App"
        android:padding="20dp"
        android:layout_marginTop="10sp"
        android:background="#FF0000"
        android:width="250dp"
        android:paddingTop="40dp"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:id="@+id/capstone_button" />

</LinearLayout>
